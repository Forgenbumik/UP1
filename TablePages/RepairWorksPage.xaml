<Page x:Class="UP1.TablePages.RepairWorksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP1.TablePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RepairWorksPage" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <DataGrid x:Name="DGridWorks" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер работы" Binding="{Binding WorkID}"/>
                <DataGridTextColumn Header="Номер заявки" Binding="{Binding RequestID}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
